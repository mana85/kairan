<main  class="bg-light" >
  <div class="container pt-5">
    <div class="col-10 col-md-6 offset-1 offset-md-3 border bg-white">
      <h2 class="text-center mt-1">会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :email, class: "form-label" %>*<br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <div class="text-secondary small text-right">
            入力必須です。
          </div>
        </div>

        <div class="field">
          <%= f.label :password, class: "form-label" %>*
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <div class="text-secondary small text-right">
            入力必須です。
          </div>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "form-label" %>*<br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          <div class="text-secondary small text-right">
            入力必須です。
          </div>
        </div>

        <div class="field">
          <%= f.label "名前", class: "form-label" %>*<br />
          <%= f.text_field :display_name, class: "form-control" %>
          <div class="text-secondary small text-right">
            入力必須です。あとから変更できます。
          </div>
        </div>

        <div class="field">
          <%= f.label "自己紹介", class: "form-label" %><br />
          <%= f.text_field :description, class: "form-control" %>
          <div class="text-secondary small text-right">
            あとから変更できます。
          </div>
        </div>

        <div class="field">
          <%= f.label :url, class: "form-label" %><br />
          <%= f.text_field :url, class: "form-control" %>
          <div class="text-secondary small text-right">
            あとから変更できます。
          </div>
        </div>

        <div class="actions mt-4 text-center">
          <%= f.submit "Sign up", class: "btn btn-outline-primary" %>
        </div>
      <% end %>

      <div class="text-right">
        <%= render "public/shared/links" %>
      </div>

    </div>
  </div>
</main>