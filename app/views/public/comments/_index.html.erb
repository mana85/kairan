<div>
  <table>
    <tbody>
      <% flyer.comments.order(id: :DESC).each do |comment| %>
      <tr>
        <td class="p-2">
          <%= link_to "/" do %>
            <%= image_tag comment.user.get_profile_image, size:"45x45", class:"rounded-circle" %><br />
          <% end %>
        </td>
        <td>
          <%= comment.comment %> <br />
          <small><%= link_to comment.user.display_name, "/" %>
          <% if comment.user == current_user %>
            <%= link_to "削除", flyer_comment_path(flyer, comment), method: :delete, class:"text-danger" %></small>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>