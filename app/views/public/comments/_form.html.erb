<%= form_with(model:[flyer, comment], local:false) do |f| %>
  <div class="row">
    <div class="form-group col-11">
      <%= f.text_field :comment, placeholder: "コメントする", class: 'form-control comment-textarea' %>
    </div>
    <div class="form_group col-1">
      <%= f.submit "投稿", class: "btn btn-outline-primary" %>
    </div>
  </div>
<% end %>
