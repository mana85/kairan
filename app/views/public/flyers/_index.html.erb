
<% flyers.each do|flyer| %>
  <% if flyer.user.is_delete || flyer.is_deleted %>
  <% else %>
    <div class="border bg-white mt-3">
      <div style="width:100%; height:100px;position:relative;overflow:hidden;">
        <%= image_tag flyer.banner, style:"position:absolute;top:50%;left:50%;transform:translate(-50%, -50%);" %>
      </div>
      <h3 class="pt-2 pl-2 pr-2">
        <%= link_to flyer.title.truncate(20), flyer_path(flyer.id) %>
      </h3>
      <div class="pl-2 pr-2">
        <%= flyer.body.truncate(70) %>
      </div>
      <div id="tag" class="pl-2 pr-2 text-info">
        <%= image_tag "tag_icon.png" %>
        <% flyer.tags.each do |tag| %>
          <%= link_to tag.tag_name, tag_path(tag.id) %>
        <% end %>
      </div>
      <div class="pl-2 pr-2 pb-2 text-info text-right">
        <%= link_to flyer.user.display_name, user_path(flyer.user.id) %>
        <div style="display:inline-block;width:25@x;height:25px;">
          <%= render "public/clips/btn", flyer: flyer %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>